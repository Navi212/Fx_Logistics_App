            <!-- Col 2 ends here -->

            <!-- Col 3 starts here -->
            <div class="col-12 col-md-4 mb-4">
                <small class="small-text text-success d-inline-block px-0 py-1">
                    <i class="fas fa-check-circle me-1"></i>
                    Delivered on Monday, February 7, 2022, 12.55 PM
                </small>
                <small class="small-text d-inline-block px-0 mt-4 pt-1">
                    FX office 123 CA, USA
                </small>
            </div>
            <!-- Col 3 ends here -->
        </div>
        <!-- Top Info Section ends here -->
    
        <!-- Bottom Info Section starts here -->
        <div class="tracking-info-bottom tracking-steps row mt-3 border-top">
            <!-- Step Row 1 -->
            <div class="row step-row mb-4 py-3">
              <div class="col-12 col-md-4 stepper-column">
                <div class="tracking-marker"></div>
                <p class="small text-muted mb-1">Monday, February 7, 2022, 12:55 PM</p>
                <p class="mb-0">PASIR GUDANG, MYS</p>
              </div>
              <div class="bottom-text col-12 col-md-8 p-0 px-sm-2 mt-3 mt-sm-0">
                <h6 class="fw-bold"><i class="fas fa-check-circle me-1 text-success"></i>DELIVERED</h6>
                <p>More details about the delivery.</p>
              </div>
            </div>
            
            <!-- Step Row 2 -->
